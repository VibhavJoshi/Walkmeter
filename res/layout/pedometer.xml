<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding = "10dp"
    android:background="#e6e6e6">
<View 
    android:layout_width = "fill_parent"
    android:layout_height = "0dp"
    android:layout_weight = "1"/>

<TextView
    android:textColor="@android:color/black"
    android:layout_height="wrap_content"
    android:layout_width = "fill_parent"
    android:text = "Today"
    android:id = "@+id/tvStepsToday1"
    android:gravity="center"
    android:textSize="20dp"
    android:background="#ffffff"
    />
<LinearLayout 
    android:background="#ffffff"
    android:layout_height = "120dp"
    android:layout_width = "fill_parent"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_height= "wrap_content"
        android:layout_width="wrap_content"
        android:gravity="right"
        android:text = "100"
        android:textColor="@android:color/black"
        android:id = "@+id/tvStepsToday"
        android:textSize="100dp">
        
    </TextView>

    <TextView
        android:id="@+id/tvStepsTodayAfter"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="/100 min"
        android:textSize="20dp" />

</LinearLayout>
<View
    android:layout_width = "fill_parent"
    android:layout_height = "0dp"
    android:layout_weight="1"/>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height = "wrap_content"
    android:orientation = "horizontal"
    >
    <LinearLayout 
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"
        android:orientation = "vertical"
        android:layout_weight="1"
        android:background="#ffffff">
        <TextView 
            android:layout_width="match_parent"
            android:layout_height = "wrap_content"
            android:textColor="@android:color/black"
            android:text="Yesterday"
            android:id="@+id/tvStepsYesterday2"
            android:gravity="center"
            android:textSize="20dp"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:gravity="center"
             >

            <TextView 
                android:textColor="@android:color/black"
                android:layout_height = "wrap_content"
                android:layout_width = "wrap_content"
                android:id = "@+id/tvStepsYesterday"
               	android:textSize="40dp"
                android:text = "10"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
        
    </LinearLayout>    

	<View
	    android:layout_width="30dp"
	    android:layout_height="match_parent" />

    <LinearLayout 
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"
        android:orientation = "vertical"
        android:layout_weight="1"
        android:background="#ffffff">
	    <TextView 
            android:layout_width="match_parent"
            android:layout_height = "wrap_content"
            android:textColor="@android:color/black"
            android:text="Highest"
            android:id="@+id/tvStepsHighest3"
            android:gravity="center"
            android:textSize="20dp"/>
        
	    <RelativeLayout 
            android:layout_height = "100dp"
            android:layout_width = "fill_parent"
            android:gravity = "center"
            >



            <TextView
                android:id="@+id/tvStepsHighest"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="10"
                android:textSize="40dp" />
				
        </RelativeLayout>
	    
    </LinearLayout>    
    

   </LinearLayout>

<View 
    android:layout_width = "fill_parent"
    android:layout_height = "0dp"
    android:layout_weight = "1"/>

<Button
   
    style = "@style/GreenButton"
    android:id="@+id/btnCount"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Start Counting!"
    android:textSize="25dp" />
 
</LinearLayout>
